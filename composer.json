{
  "name": "grasmash/composer-scaffold",
  "description": "Test for Composer Scaffold.",
  "type": "composer-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.0.8",
    "composer-plugin-api": "^1.0.0"
  },
  "autoload": {
    "psr-4": {
      "Grasmash\\ComposerScaffold\\": ""
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Grasmash\\ComposerScaffold\\Tests\\": "tests/src"
    }
  },
  "extra": {
    "class": "Grasmash\\ComposerScaffold\\Plugin",
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml.dist --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer --",
    "phpcbf": "phpcbf --standard=phpcs.xml.dist --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer --",
    "unit": "phpunit --colors=always",
    "test": [
      "@phpcs",
      "@unit"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require-dev": {
    "composer/composer": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "drupal/coder": "^8.3.2",
    "phpunit/phpunit": "^6.5"
  }
}
